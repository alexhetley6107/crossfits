{
  "name": "remindee-ui-kit",
  "description": "A component library for ReminDee planning app",
  "private": false,
  "version": "0.0.0",
  "author": "Aleksandr Bredun (hetley)",
  "type": "module",
  "scripts": {
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "sb": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "vitest run",
    "test-update": "vitest run --update",
    "prepare": "husky install",
    "create-component": "hygen generator new",
    "create-page": "hygen pagegenerator new",
    "build-icons-sprite": "tsx scripts/build-icons-sprite.cts",
    "type-check": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": "^18.3.1"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.2",
    "@eslint/js": "^9.13.0",
    "@storybook/addon-essentials": "^8.4.1",
    "@storybook/addon-interactions": "^8.4.1",
    "@storybook/addon-onboarding": "^8.4.1",
    "@storybook/blocks": "^8.4.1",
    "@storybook/react": "^8.4.1",
    "@storybook/react-vite": "^8.4.1",
    "@storybook/test": "^8.4.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.14",
    "@types/react": "^18.3.12",
    "@vitejs/plugin-react": "^4.3.3",
    "eslint": "^9.13.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "eslint-plugin-storybook": "^0.10.2",
    "fs-extra": "^11.2.0",
    "glob": "^7.2.3",
    "globals": "^15.11.0",
    "husky": "^8.0.0",
    "hygen": "^6.2.11",
    "jest-styled-components": "^7.2.0",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.2.10",
    "node-html-parser": "^6.1.13",
    "react-content-loader": "^7.0.2",
    "storybook": "^8.4.1",
    "styled-components": "^6.1.13",
    "tsx": "^4.19.2",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.11.0",
    "vite": "^5.4.10",
    "vitest": "^2.1.4"
  }
